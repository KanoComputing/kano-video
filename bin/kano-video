import os
import sys

if __name__ == '__main__' and __package__ is None:
    dir_path = os.path.abspath(os.path.join(os.path.dirname(__file__), '..'))
    if dir_path != '/usr':
        sys.path.insert(1, dir_path)

from kano.utils import write_json
from kano_video.youtube import search_youtube_by_keyword, search_youtube_by_user, parse_youtube_entries


# entries = search_youtube_by_keyword(popular=True)
entries = search_youtube_by_user('KanoComputing')
write_json('entries.json', entries[0])
my_entries = parse_youtube_entries(entries)


from pprint import pprint
pprint(my_entries[0])
